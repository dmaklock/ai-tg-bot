# Telegram Bot Configuration
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Use existing assistant ID
# If not provided, a new assistant will be created on first use
OPENAI_ASSISTANT_ID=

# Admin Panel Authentication
# Credentials for accessing the admin panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_secure_password

# Server Configuration
# Port for the admin panel web server
PORT=3000

